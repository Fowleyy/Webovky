@model IEnumerable<Semestralka.Domain.Entities.CalendarShare>

<h2 class="mb-4">Kalendáře sdílené s tebou</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Momentálně s tebou není sdílen žádný kalendář.</p>
}
else
{
    <div class="list-group shadow-sm">
        @foreach (var share in Model)
        {
            if (share.Calendar != null && share.Calendar.Owner != null)
            {
                <a href="/calendar/@share.Calendar.Id"
                   class="list-group-item list-group-item-action">

                    <strong>@share.Calendar.Owner.FullName</strong><br />
                    <small>@share.Calendar.Owner.Email</small><br />
                    <span class="text-muted">Práva: @share.Permission</span>

                </a>
            }
        }
    </div>
}
