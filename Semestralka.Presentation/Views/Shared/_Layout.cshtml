@using Microsoft.AspNetCore.Http

@{
    string currentPath = Context.Request.Path.ToString().ToLower();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="/css/theme.css" rel="stylesheet" />
    <link href="/css/layout.css" rel="stylesheet" />
    <link href="/css/calendar.css" rel="stylesheet" />
    <link href="/css/events.css" rel="stylesheet" />
    <link href="/css/notifications.css" rel="stylesheet" />
    <link href="/css/event-form.css" rel="stylesheet" />
    <link href="/css/settings.css" rel="stylesheet" />

</head>
<script src="/js/notifications.js"></script>
<body>

<div class="d-flex" style="min-height: 100vh;">

    <aside class="sidebar shadow-sm d-flex flex-column">

        <h3 class="sidebar-title mb-4">Kalendář</h3>

        <ul class="nav flex-column">

            <li class="nav-item mb-2">
                <a class="nav-link @(currentPath == "/" ? "active" : "")" href="/">
                    📅 Kalendář
                </a>
            </li>

            <li class="nav-item mb-2">
                <a class="nav-link @(currentPath.Contains("/events") ? "active" : "")" href="/events">
                    📝 Události
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link position-relative" href="#" id="notif-btn">
                    🔔 Notifikace
                    <span id="notif-badge" class="badge bg-danger position-absolute top-0 start-100 translate-middle" style="display:none;">
                        0
                    </span>
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link @(currentPath.Contains("/shared-calendars") ? "active" : "")" href="/shared-calendars">
                    🤝 Sdílené kalendáře
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link @(currentPath.Contains("/settings") ? "active" : "")" href="/settings">
                    ⚙️ Nastavení
                </a>
            </li>
            @if (Context.Session.GetString("isAdmin") == "1")
                {
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/admin">🔧 Administrace</a>
                    </li>
                }

        </ul>

        <div id="notif-panel" class="notif-panel shadow">
            <div class="notif-header">Notifikace</div>
            <div id="notif-list" class="notif-list">Načítám...</div>
        </div>

        <div class="user-box p-3 mt-auto">

            <div class="d-flex align-items-center gap-3 mb-3">
                <img src="@Context.Session.GetString("avatar")"
                    class="avatar shadow-sm"
                    style="width:44px; height:44px; border-radius:50%;" />

                <div>
                    <div class="fw-bold" style="font-size:15px;">
                        @Context.Session.GetString("fullname")
                    </div>
                </div>
            </div>

            <a href="/logout"
            class="btn btn-outline-purple w-100 d-flex align-items-center justify-content-center gap-2"
            style="padding:10px 14px; font-size:15px;">
                🔓 <span>Odhlásit se</span>
            </a>

        </div>



    </aside>

    <main class="flex-grow-1 p-4">
        <div class="content-box p-4 shadow-sm">
            @RenderBody()
        </div>
    </main>

</div>

</body>
</html>
