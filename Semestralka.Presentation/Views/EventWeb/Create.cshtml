@{
    ViewData["Title"] = "Vytvořit událost";
    Layout = "_Layout";
}

<h2 class="fw-bold mb-4">Vytvořit událost</h2>

<div class="event-form">

    @if (ViewData["Error"] != null)
    {
        <div class="error mb-3">@ViewData["Error"]</div>
    }

    <form method="post">

        <input type="hidden" name="CalendarId" value="@(ViewBag.CalendarId)" />

        <div class="row">
            <div class="col">
                <label>Název události</label>
                <input name="Title" type="text" required />
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label>Popis</label>
                <textarea name="Description"></textarea>
            </div>
        </div>

        <div class="inline">
            <div class="inline-item">
                <label>Začátek</label>
                <input name="StartTime" type="datetime-local" required />
            </div>

            <div class="inline-item">
                <label>Konec</label>
                <input name="EndTime" type="datetime-local" required />
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label>Místo</label>
                <input name="Location" type="text" />
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label>Kategorie</label>
                <select name="CategoryId" class="form-select">
                    <option value="">-- vyber kategorii --</option>
                    @foreach (var c in ViewBag.Categories)
                    {
                        <option value="@c.Id" style="color:@c.ColorHex">
                            @c.Name
                        </option>
                    }
                </select>

            </div>
        </div>

        <div class="checkbox">
            <input type="checkbox" name="IsAllDay" value="true" />
            <label>Celodenní událost</label>
        </div>

        <div class="actions">
            <button class="btn btn-primary">Vytvořit</button>
            <a href="/" class="btn btn-outline">Zpět</a>
        </div>

    </form>

</div>
