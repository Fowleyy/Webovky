@{
    Layout = null;
}

<link rel="stylesheet" href="/css/auth.css" />

<div class="bg-blob blob-a"></div>
<div class="bg-blob blob-b"></div>

<div class="auth-card-wrapper">
    <div class="auth-card">

        <h2>Přihlášení</h2>
        <p>Vítejte zpět! Pokračujte do svého kalendáře.</p>

        @if (ViewData["Error"] != null)
        {
            <div style="color:#d33;font-weight:600;margin-bottom:12px;">
                @ViewData["Error"]
            </div>
        }

        <form method="post" action="/login">
            <input type="email" name="email" placeholder="Email" required />
            <input type="password" name="password" placeholder="Heslo" required />
            <button class="auth-btn">Přihlásit se</button>
        </form>

        <a href="/register" class="auth-link">Nemáte účet? Registrujte se</a>
    </div>
</div>
