@model Semestralka.Models.Event

@{
    ViewData["Title"] = "Vytvořit událost";
}

<h2>Vytvořit událost</h2>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<form method="post">
    <div class="mb-3">
        <label>Název</label>
        <input class="form-control" name="Title" required />
    </div>

    <div class="mb-3">
        <label>Popis</label>
        <textarea class="form-control" name="Description"></textarea>
    </div>

    <div class="mb-3">
        <label>Začátek</label>
        <input type="datetime-local" class="form-control" name="StartTime" required />
    </div>

    <div class="mb-3">
        <label>Konec</label>
        <input type="datetime-local" class="form-control" name="EndTime" required />
    </div>

    <div class="mb-3">
        <label>Místo</label>
        <input class="form-control" name="Location" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="IsAllDay" />
        <label class="form-check-label">Celý den</label>
    </div>

    <button class="btn btn-primary">Vytvořit</button>
</form>
